<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="itemTypeTextField">Item Type</label>
                    <input type="text" class="form-control"
                    id="itemTypeTextField"
                    name="ItemType"
                    value="<%= entry.ItemType %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="itemNameTextField">Item Name</label>
                    <input type="text" class="form-control"
                    id="itemNameTextField"
                    name="ItemName"
                    value="<%= menu.ItemName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    name="Description"
                    value="<%= menu.Description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="caloriesTextArea">Calories</label>
                    <textarea class="form-control"
                    id="caloriesTextArea"
                    name="Calories"
                    required><%= menu.Calories %></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Item Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    name="Price"
                    value="<%= menu.Price %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dietaryResTextField">Dietary Restrictions</label>
                    <input type="text" class="form-control"
                    id="dietaryResTextField"
                    name="DietaryRes"
                    value="<%= menu.DietaryRes %>"
                    required>
                </div>

                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/menu" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>
